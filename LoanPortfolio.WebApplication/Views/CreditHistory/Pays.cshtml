@using LoanPortfolio.Db.Entities
<div style="margin-bottom: 30px; margin-top: 30px;">
    <div style="font-size: 2em; margin-bottom:10px">
        График платежей
    </div>

    <table class="table" style="margin-bottom: 0">
        <tr>
            <th>
                Дата
            </th>
            <th>
                Сумма
            </th>
            <th>
                Статус оплаты
            </th>
            <th style="width: 15%"></th>
        </tr>
        @{
            foreach (LoanPayment loan in ViewBag.Pays)
            {
                <tr>
                    <td>
                        @{Write(loan.DatePayment.ToString("dd.MM.yyyy"));}
                    </td>
                    <td>
                        @{Write(loan.Sum);}
                    </td>
                    <td>
                        @{
                            if (loan.IsPaid)
                            {
                                <img src="~/check.png" style="width: 20px" />
                            }
                        }
                    </td>
                    <td>
                        <div style="display: flex;">
                            @{
                                if (!loan.IsPaid)
                                {
                                    <form action="~/CreditHistory/PaysPayment">
                                        <input type="hidden" value="@loan.Id" name="id" />
                                        <button type="submit" class="btn" style="margin-right: 15px">Оплатить</button>
                                    </form>
                                }
                            }
                        </div>
                    </td>
                </tr>
            }
        }

    </table>
</div>