<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Кредитный портфель", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Доходы", "Index", "Income")</li>
                    <li>@Html.ActionLink("Расходы", "Index", "Expense")</li>
                    <li>@Html.ActionLink("Кредитная история", "Index", "CreditHistory")</li>
                    <li>@Html.ActionLink("Оборотно-сальдовая ведомость", "Index", "Result")</li>
                </ul>
                <ul class="nav navbar-nav" style="float: right;">
                    @{
                        if (ViewBag.User != null)
                        {
                            string str = ViewBag.User.FirstName + " " + ViewBag.User.LastName;
                            <li>@Html.ActionLink(str, "PC", "Home")</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="alert-danger">
        <div class="container body-content" style="font-size: 25px">
            @{if (ViewBag.Errors != null)
                {
                    foreach (string error in ViewBag.Errors)
                    {
                        <p>@{Write(error);}</p>
                    }
                }
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
